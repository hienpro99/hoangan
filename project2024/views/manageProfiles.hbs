{{!< main}}
<title>Quản lý hồ sơ</title>
<h1 class="mb-4">Quản lý hồ sơ</h1>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">MHĐ</th>
                        <th scope="col">CCCD</th>
                        <th scope="col">Họ và tên</th>
                        <th scope="col">Ngày thuê</th>
                        <th scope="col">Đến ngày</th>
                        <th scope="col">Trạng thái HĐ</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each profiles}}
                    <tr>
                        <th scope="row">{{ @index }}</th>
                        <td>{{ contractNumber }}</td>
                        <td>{{ cccd }}</td>
                        <td>{{ fullname }}</td>
                        <td>{{ formatDate rentalStartDate }}</td>
                        <td>{{ formatDate rentalEndDate }}</td>
                        <td style="color: {{ statusColor }}">{{ contractStatus }}</td>
                        <td>
                            <a href="/detail/{{ contractNumber }}" class="btn btn-info btn-sm mr-2"><i class="fas fa-eye"></i> Chi tiết</a>
                            <a href="/further-extension/{{ contractNumber }}" class="btn btn-primary btn-sm"><i class="fas fa-hand-holding-usd"></i> Gia Hạn Thêm</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
